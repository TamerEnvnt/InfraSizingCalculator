@page "/login"
@rendermode InteractiveServer
@layout InfraSizingCalculator.Components.Layout.AuthLayout
@using InfraSizingCalculator.Services.Auth
@using Microsoft.AspNetCore.Authentication
@inject IExternalAuthenticationService ExternalAuthService
@inject ILdapAuthenticationService LdapAuthService
@inject IAuthenticationSettingsService SettingsService
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject ILogger<Login> Logger

<PageTitle>Sign In - Infrastructure Sizing Calculator</PageTitle>

@*
    Login.razor - v0.4.4 wireframe design
    Matches wireframe: 14-login.html
    Light theme with centered login card
*@

<div class="auth-layout">
    <!-- Header -->
    <header class="auth-header">
        <a href="/" class="auth-header-logo">InfraSizing Calculator</a>
        <a href="/register" class="btn btn-sm btn-primary">Sign Up</a>
    </header>

    <!-- Content -->
    <div class="auth-content">
        <div class="login-card">
            <div class="login-header">
                <h1 class="login-title">Welcome back</h1>
                <p class="login-subtitle">Sign in to access your scenarios</p>
            </div>

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="error-message">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <line x1="12" y1="8" x2="12" y2="12"/>
                        <line x1="12" y1="16" x2="12.01" y2="16"/>
                    </svg>
                    @_errorMessage
                </div>
            }

            <!-- Social Login Buttons -->
            <div class="social-buttons">
                @if (_externalProviders.Any(p => p.Name.Equals("Google", StringComparison.OrdinalIgnoreCase)))
                {
                    <button type="button" class="social-btn" @onclick='() => HandleExternalLogin("Google")'>
                        <svg width="14" height="14" viewBox="0 0 24 24">
                            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                        </svg>
                        Google
                    </button>
                }
                else
                {
                    <button type="button" class="social-btn" disabled title="Google login not configured">
                        <svg width="14" height="14" viewBox="0 0 24 24">
                            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                        </svg>
                        Google
                    </button>
                }

                @if (_externalProviders.Any(p => p.Name.Equals("Microsoft", StringComparison.OrdinalIgnoreCase)))
                {
                    <button type="button" class="social-btn" @onclick='() => HandleExternalLogin("Microsoft")'>
                        <svg width="14" height="14" viewBox="0 0 24 24">
                            <path fill="#00A4EF" d="M11.4 24H0V12.6h11.4V24z"/>
                            <path fill="#FFB900" d="M24 24H12.6V12.6H24V24z"/>
                            <path fill="#F25022" d="M11.4 11.4H0V0h11.4v11.4z"/>
                            <path fill="#7FBA00" d="M24 11.4H12.6V0H24v11.4z"/>
                        </svg>
                        Microsoft
                    </button>
                }
                else
                {
                    <button type="button" class="social-btn" disabled title="Microsoft login not configured">
                        <svg width="14" height="14" viewBox="0 0 24 24">
                            <path fill="#00A4EF" d="M11.4 24H0V12.6h11.4V24z"/>
                            <path fill="#FFB900" d="M24 24H12.6V12.6H24V24z"/>
                            <path fill="#F25022" d="M11.4 11.4H0V0h11.4v11.4z"/>
                            <path fill="#7FBA00" d="M24 11.4H12.6V0H24v11.4z"/>
                        </svg>
                        Microsoft
                    </button>
                }
            </div>

            <div class="divider-text">or sign in with email</div>

            <!-- Email/Password Form -->
            <form method="post" action="/api/auth/login">
                <input type="hidden" name="ReturnUrl" value="@(ReturnUrl ?? "/")" />

                <div class="form-group">
                    <label class="form-label" for="email">Email</label>
                    <input id="email"
                           name="Email"
                           type="email"
                           class="form-input"
                           placeholder="you@company.com"
                           autocomplete="email"
                           required />
                </div>

                <div class="form-group">
                    <label class="form-label password-label" for="password">
                        Password
                        <a href="#" class="forgot-link">Forgot?</a>
                    </label>
                    <input id="password"
                           name="Password"
                           type="password"
                           class="form-input"
                           placeholder="Enter password"
                           autocomplete="current-password"
                           required />
                </div>

                <div class="form-group">
                    <label class="remember-label">
                        <input type="checkbox" name="RememberMe" value="true" class="remember-checkbox" />
                        Remember me for 30 days
                    </label>
                </div>

                <button type="submit" class="btn btn-primary btn-full">
                    Sign In
                </button>
            </form>

            <div class="login-footer">
                Don't have an account? <a href="/register">Create one</a>
            </div>

            @if (_ldapEnabled)
            {
                <div class="sso-link">
                    <a href="#" @onclick="ToggleLdapLogin" @onclick:preventDefault>Sign in with Corporate SSO (LDAP/AD)</a>
                </div>

                @if (_showLdapLogin)
                {
                    <div class="ldap-form">
                        <div class="form-group">
                            <label class="form-label" for="ldapUsername">AD Username</label>
                            <input id="ldapUsername"
                                   @bind="_ldapUsername"
                                   class="form-input"
                                   placeholder="username or domain\\username"
                                   autocomplete="username" />
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="ldapPassword">AD Password</label>
                            <input id="ldapPassword"
                                   @bind="_ldapPassword"
                                   type="password"
                                   class="form-input"
                                   placeholder="Your AD password"
                                   autocomplete="current-password" />
                        </div>
                        <button type="button" class="btn btn-primary btn-full" @onclick="HandleLdapLogin" disabled="@_isLoading">
                            @if (_isLoading)
                            {
                                <span class="spinner"></span>
                                <span>Signing in...</span>
                            }
                            else
                            {
                                <span>Sign in with AD</span>
                            }
                        </button>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private string? _errorMessage;
    private bool _isLoading;
    private IEnumerable<AuthenticationScheme> _externalProviders = [];
    private bool _ldapEnabled;
    private bool _showLdapLogin;
    private string _ldapUsername = string.Empty;
    private string _ldapPassword = string.Empty;

    [SupplyParameterFromQuery]
    public string? ReturnUrl { get; set; }

    [SupplyParameterFromQuery(Name = "error")]
    public string? ErrorFromUrl { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (!string.IsNullOrEmpty(ErrorFromUrl))
        {
            _errorMessage = ErrorFromUrl;
        }

        _externalProviders = await ExternalAuthService.GetExternalProvidersAsync();
        _ldapEnabled = await SettingsService.IsLdapEnabledAsync();
    }

    private void HandleExternalLogin(string provider)
    {
        var callbackUrl = Navigation.ToAbsoluteUri($"/external-login-callback?returnUrl={Uri.EscapeDataString(ReturnUrl ?? "/")}");
        var challengeUrl = $"/api/auth/external-login?provider={Uri.EscapeDataString(provider)}&returnUrl={Uri.EscapeDataString(callbackUrl.ToString())}";
        Navigation.NavigateTo(challengeUrl, forceLoad: true);
    }

    private void ToggleLdapLogin()
    {
        _showLdapLogin = !_showLdapLogin;
        _errorMessage = null;
    }

    private async Task HandleLdapLogin()
    {
        if (string.IsNullOrWhiteSpace(_ldapUsername) || string.IsNullOrWhiteSpace(_ldapPassword))
        {
            _errorMessage = "Username and password are required.";
            return;
        }

        _errorMessage = null;
        _isLoading = true;

        try
        {
            var result = await LdapAuthService.AuthenticateAsync(_ldapUsername, _ldapPassword);

            if (result.Success)
            {
                var authResult = await AuthService.LoginOrCreateFromExternalAsync(
                    result.Email!,
                    result.DisplayName ?? _ldapUsername,
                    "LDAP",
                    result.DistinguishedName ?? _ldapUsername);

                if (authResult.Succeeded)
                {
                    Logger.LogInformation("User {Email} logged in via LDAP", result.Email);
                    Navigation.NavigateTo(ReturnUrl ?? "/", forceLoad: true);
                }
                else
                {
                    _errorMessage = authResult.ErrorMessage ?? "Failed to complete login.";
                }
            }
            else
            {
                _errorMessage = result.ErrorMessage ?? "Invalid username or password.";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "LDAP login error for user {Username}", _ldapUsername);
            _errorMessage = "An unexpected error occurred. Please try again.";
        }
        finally
        {
            _isLoading = false;
        }
    }
}

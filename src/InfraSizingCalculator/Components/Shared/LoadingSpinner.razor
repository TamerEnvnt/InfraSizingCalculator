@* Reusable loading spinner component *@

<div class="loading-container @AdditionalClass"
     role="status"
     aria-live="polite"
     aria-busy="true">
    <div class="loading-spinner @Size" aria-hidden="true"></div>
    <span class="loading-message @(string.IsNullOrEmpty(Message) ? "visually-hidden" : "")">
        @(string.IsNullOrEmpty(Message) ? "Loading..." : Message)
    </span>
</div>

@code {
    [Parameter] public string? Message { get; set; }
    [Parameter] public string Size { get; set; } = "medium"; // small, medium, large
    [Parameter] public string? AdditionalClass { get; set; }
}

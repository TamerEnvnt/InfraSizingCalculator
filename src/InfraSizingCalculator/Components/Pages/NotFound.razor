@page "/not-found"
@page "/404"
@inject NavigationManager NavigationManager

<PageTitle>Page Not Found - Infrastructure Sizing Calculator</PageTitle>

@*
    NotFound.razor - v0.4.4 wireframe design
    Matches wireframe: 21-error-404.html
    Centered error content with helpful links
*@

<div class="error-page-container">
    <!-- Header -->
    <header class="error-header">
        <div class="header-logo">InfraSizing</div>
        <div class="header-right">
            <a href="/" class="btn btn-sm btn-secondary">
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                    <polyline points="9 22 9 12 15 12 15 22"/>
                </svg>
                Home
            </a>
        </div>
    </header>

    <!-- Error Content -->
    <div class="error-page">
        <div class="error-content">
            <div class="error-illustration">
                <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M16 16s-1.5-2-4-2-4 2-4 2"/>
                    <line x1="9" y1="9" x2="9.01" y2="9"/>
                    <line x1="15" y1="9" x2="15.01" y2="9"/>
                </svg>
            </div>
            <div class="error-code">404</div>
            <h1 class="error-title">Page Not Found</h1>
            <p class="error-message">
                The page you're looking for doesn't exist or has been moved.
                Check the URL or navigate back to safety.
            </p>

            <div class="error-actions">
                <a href="/" class="btn btn-primary">
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                        <polyline points="9 22 9 12 15 12 15 22"/>
                    </svg>
                    Go Home
                </a>
                <button class="btn btn-secondary" @onclick="GoBack">
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M19 12H5M12 19l-7-7 7-7"/>
                    </svg>
                    Go Back
                </button>
            </div>

            <div class="helpful-links">
                <h4>Helpful Links</h4>
                <ul>
                    <li>
                        <a href="/dashboard">
                            <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="3" width="18" height="18" rx="2"/>
                                <path d="M3 9h18"/>
                            </svg>
                            Dashboard
                        </a>
                    </li>
                    <li>
                        <a href="/scenarios">
                            <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"/>
                            </svg>
                            My Scenarios
                        </a>
                    </li>
                    <li>
                        <a href="/settings">
                            <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="3"/>
                                <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-4 0v-.09A1.65 1.65 0 0 0 9 19.4"/>
                            </svg>
                            Settings
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@code {
    private void GoBack()
    {
        NavigationManager.NavigateTo("javascript:history.back()", forceLoad: true);
    }
}

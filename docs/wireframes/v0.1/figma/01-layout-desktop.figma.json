            {
              "name": "Step 1 - Platform",
              "type": "FRAME",
              "x": 16,
              "y": 24,
              "width": 248,
              "height": 56,
              "children": [
                { "name": "Step Number", "type": "ELLIPSE", "x": 0, "y": 8, "width": 40, "height": 40, "fills": [{"type": "SOLID", "color": "#238636"}] },
                { "name": "Step Label", "type": "TEXT", "x": 56, "y": 8, "text": "Platform Selection", "fontSize": 14, "fontWeight": 600, "color": "#f0f6fc" },

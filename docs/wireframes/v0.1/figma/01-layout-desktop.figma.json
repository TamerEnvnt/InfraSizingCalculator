          "name": "Collapse Button",
          "type": "FRAME",
          "x": 240,
          "y": 400,
          "width": 24,
          "height": 24,
          "cornerRadius": 4,
          "fills": [{ "type": "SOLID", "color": "#21262d" }],
          "children": [
            { "name": "Icon", "type": "TEXT", "x": 7, "y": 4, "text": "◀", "fontSize": 12, "color": "#8b949e" }
          ]
        }
      ]
    },

    {
      "name": "Main Content",
      "type": "FRAME",
      "x": 280,
      "y": 64,
      "width": 840,
      "height": 836,
      "fills": [{ "type": "SOLID", "color": "#0d1117" }],
      "padding": 32,
      "children": [
        {
          "name": "Content Header",
          "type": "FRAME",
          "x": 32,
          "y": 32,
          "width": 776,
          "height": 80,
          "children": [
            { "name": "Title", "type": "TEXT", "x": 0, "y": 0, "text": "Application Configuration", "fontSize": 24, "fontWeight": 600, "color": "#f0f6fc" },
            { "name": "Subtitle", "type": "TEXT", "x": 0, "y": 36, "text": "Define your application workloads and environment requirements", "fontSize": 14, "color": "#8b949e" }
          ]
        },
        {
          "name": "Content Area",
          "type": "FRAME",
          "x": 32,
          "y": 128,
          "width": 776,
          "height": 600,
          "fills": [{ "type": "SOLID", "color": "#161b22" }],
          "cornerRadius": 8,
          "stroke": { "color": "#30363d", "width": 1 },
          "children": [
            { "name": "Placeholder Text", "type": "TEXT", "x": 300, "y": 280, "text": "Wizard Step Content", "fontSize": 16, "color": "#8b949e" }
          ]
        }
      ]
    },

    {
      "name": "Context Panel",
      "type": "FRAME",
      "x": 1120,
      "y": 64,
      "width": 320,
      "height": 836,

@using InfraSizingCalculator.Models

@* Summary metric cards for results display *@

<div class="summary-cards @AdditionalClass">
    @if (K8sResult != null)
    {
        <div class="summary-card">
            <span class="summary-icon">@ClusterIcon</span>
            <span class="summary-label">Clusters</span>
            <span class="summary-value">@ClusterCount</span>
            <span class="summary-desc">@ClusterDescription</span>
        </div>
        <div class="summary-card">
            <span class="summary-icon icon icon-server"></span>
            <span class="summary-label">Total Nodes</span>
            <span class="summary-value">@K8sResult.GrandTotal.TotalNodes</span>
        </div>
        <div class="summary-card">
            <span class="summary-icon">CPU</span>
            <span class="summary-label">Total CPU</span>
            <span class="summary-value">@K8sResult.GrandTotal.TotalCpu cores</span>
        </div>
        <div class="summary-card">
            <span class="summary-icon">RAM</span>
            <span class="summary-label">Total RAM</span>
            <span class="summary-value">@K8sResult.GrandTotal.TotalRam GB</span>
        </div>
        <div class="summary-card">
            <span class="summary-icon">Disk</span>
            <span class="summary-label">Total Disk</span>
            <span class="summary-value">@K8sResult.GrandTotal.TotalDisk GB</span>
        </div>
    }
    else if (VMResult != null)
    {
        <div class="summary-card">
            <span class="summary-icon icon icon-server"></span>
            <span class="summary-label">Total VMs</span>
            <span class="summary-value">@VMResult.GrandTotal.TotalVMs</span>
        </div>
        <div class="summary-card">
            <span class="summary-icon">CPU</span>
            <span class="summary-label">Total CPU</span>
            <span class="summary-value">@VMResult.GrandTotal.TotalCpu cores</span>
        </div>
        <div class="summary-card">
            <span class="summary-icon">RAM</span>
            <span class="summary-label">Total RAM</span>
            <span class="summary-value">@VMResult.GrandTotal.TotalRam GB</span>
        </div>
        <div class="summary-card">
            <span class="summary-icon">Disk</span>
            <span class="summary-label">Total Disk</span>
            <span class="summary-value">@VMResult.GrandTotal.TotalDisk GB</span>
        </div>
    }
</div>

@code {
    [Parameter] public K8sSizingResult? K8sResult { get; set; }
    [Parameter] public VMSizingResult? VMResult { get; set; }
    [Parameter] public string ClusterIcon { get; set; } = "K8s";
    [Parameter] public int ClusterCount { get; set; } = 1;
    [Parameter] public string ClusterDescription { get; set; } = "";
    [Parameter] public string? AdditionalClass { get; set; }
}

            {
              "name": "Step 2 - Applications",
              "type": "FRAME",
              "x": 16,
              "y": 96,
              "width": 248,
              "height": 56,
              "children": [
                { "name": "Step Number", "type": "ELLIPSE", "x": 0, "y": 8, "width": 40, "height": 40, "fills": [{"type": "SOLID", "color": "#58a6ff"}] },

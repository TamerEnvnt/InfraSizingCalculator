                { "name": "Step Number", "type": "ELLIPSE", "x": 0, "y": 8, "width": 40, "height": 40, "stroke": {"color": "#30363d"}, "fills": [] },
                { "name": "Step Label", "type": "TEXT", "x": 56, "y": 8, "text": "Infrastructure", "fontSize": 14, "fontWeight": 500, "color": "#8b949e" },
                { "name": "Step Status", "type": "TEXT", "x": 56, "y": 28, "text": "Pending", "fontSize": 12, "color": "#484f58" }

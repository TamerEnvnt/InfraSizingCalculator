{
  "name": "01 - Desktop Layout (1440px+)",
  "description": "Three-panel layout with header, collapsible sidebar, main content, and context panel",
  "viewport": { "width": 1440, "height": 900 },
  "artboard": {
    "background": "#0d1117"
  },

  "frames": [
    {
      "name": "Header",
      "type": "FRAME",
      "x": 0,
      "y": 0,
      "width": 1440,
      "height": 64,
      "fills": [{ "type": "SOLID", "color": "#010409" }],
      "children": [
        {
          "name": "Logo",
          "type": "TEXT",
          "x": 24,
          "y": 20,
          "text": "InfraSizing Calculator",
          "fontSize": 18,
          "fontWeight": 600,
          "color": "#f0f6fc"
        },
        {
          "name": "User Menu",
          "type": "FRAME",
          "x": 1340,
          "y": 16,
          "width": 80,
          "height": 32,
          "cornerRadius": 6,
          "fills": [{ "type": "SOLID", "color": "#21262d" }],
          "children": [
            {
              "name": "Avatar",
              "type": "ELLIPSE",
              "x": 8,
              "y": 4,
              "width": 24,
              "height": 24,
              "fills": [{ "type": "SOLID", "color": "#58a6ff" }]
            },
            {
              "name": "Dropdown Icon",
              "type": "TEXT",
              "x": 56,
              "y": 8,
              "text": "▼",
              "fontSize": 10,
              "color": "#8b949e"
            }
          ]
        }
      ]
    },

    {
      "name": "Sidebar",
      "type": "FRAME",
